pkgname=systemd-swap-big
pkgver=$(date +%y.%m.%d)
pkgrel=$(date +%H%M)
pkgdesc="Script for creating hybrid swap space from zram swaps, swap files and swap partitions"
arch=('any')
url="https://github.com/biglinux/systemd-swap"
license=('GPL3')
depends=('python' 'python-systemd' 'python-sysv_ipc' 'util-linux')
makedepends=('git')
provides=('systemd-swap')
conflicts=('systemd-swap-git' 'systemd-swap')
backup=('etc/systemd/swap.conf')
source=("git+${url}.git")
sha256sums=('SKIP')
install=pkgbuild.install

package() {
#     cd ${srcdir}/${pkgname}
    cd ${srcdir}/systemd-swap
    make DESTDIR="$pkgdir" install
}
